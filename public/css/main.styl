@import "_css/variables";

@font-face {
  font-family: 'pgn4web ChessSansUsual';
  src: url('chessfonts/ChessSansUsual.eot');
  src: url('chessfonts/ChessSansUsual.woff') format('woff'), url('chessfonts/ChessSansUsual.ttf') format('truetype'), url('chessfonts/ChessSansUsual.svg#ChessSansUsual') format('svg');
}

input#FEN {
  position absolute
  bottom 0
}

table
  width 100%
  position absolute
  top 0
  left 0

table#colors
  opacity $colorsOpacity

td
  border 1px solid black
  text-align center

#colors .white1
  background-color lighten($white, $one)

#colors .white2
  background-color lighten($white, $two)

#colors .white3
  background-color lighten($white, $three)

#colors .black1
  background-color lighten($black, $one)

#colors .black2
  background-color lighten($black, $two)

#colors .black3
  background-color lighten($black, $three)

#board .lightsquare
  background $light

#board .darksquare
  background $light
  //background $dark

#pieces .black
  color $blackPiece

#pieces .white
  color $whitePiece

#pieces .darksquare.bishop
  text-decoration underline

#pieces
  font-family: 'pgn4web ChessSansUsual','pgn4web Liberation Sans',sans-serif;
  font-size 8vw

#pieces td div
  width 0
  height 0
  margin -36% 0 0 18%

#pieces .pawn div:before
  content: 'p'

#pieces .rook div:before
  content: 'R'

#pieces .knight div:before
  content: 'N'

#pieces .bishop div:before
  content: 'B'

#pieces .queen div:before
  content: 'Q'

#pieces .king div:before
  content: 'K'
