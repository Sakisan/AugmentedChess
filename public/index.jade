mixin makeTable(id)
  table(id=id)
    each number in ["8","7","6","5","4","3","2","1"]
      tr(class=number)
        each letter in ["a","b","c","d","e","f","g","h"]
          td(class=letter)
            .piece
            .times
              input(type='hidden' class="white")
              input(type='hidden' class="black")
            .trade
              input(type='hidden' class="white")
              input(type='hidden' class="black")

+makeTable('board')
+makeTable('colors')
+makeTable('pieces')

